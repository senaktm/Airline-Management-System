@using AirlineManagementSystem.Models
@model List<Flight_Table>
@{
    ViewBag.Title = "Flight";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@using (Html.BeginForm())
{


    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
    </head>
    <body>
        <div class="planeManagementPage">
            <h1>F L I G H T S </h1>
            <table class="table table-bordered">
                <tr>
                    <th>FLIGHT ID    </th>
                    <th>DEPARTURE POINT  </th>
                    <th>ARRIVAL POINT   </th>
                    <th>DEPARTURE TIME   </th>
                    <th>ARRIVAL TIME   </th>
                    <th>FLIGHT TIME  </th>
                    <th>SEATING CAPACITY   </th>
                    <th>PRICE   </th>
                    <th>  </th>
                    <th>   </th>
                </tr>
                <tbody>
                    @foreach (var flg in Model)
                    {
                        <tr>
                            <td>@flg.flight_id</td>                        
                            <td>@flg.departure_point</td>
                            <td>@flg.arrival_point</td>
                            <td>@flg.departure_time</td>
                            <td>@flg.arrival_time</td>
                            <td>@flg.flight_time</td>
                            <td>@flg.seating_capacity</td>
                            <td>@flg.price</td>
                            <td><a href="/Flight/Delete/@flg.flight_id" class="btn btn-danger">DELETE</a></td>
                            <td><a href="/EditFlight/EditFlight/@flg.flight_id" class="btn btn-succes">EDIT</a></td>
                        </tr>
                    }
                </tbody>
            </table>

            <a href="/NewFlight/NewFlight" class="btn btn-primary">ADD NEW FLIGHT</a>





            <br>
        </div>

    </body>
    <style>
        body {
            background-image: url("airplane.jpg");
            background-repeat: no-repeat;
        }

        h1 {
            text-align: center;
            color: black;
            padding-bottom: 10px;
        }

        .table {
            width: 50%;
            border: 1px solid;
            border-collapse: collapse;
            position: center;
            background-color: #0009;
            margin-left: auto;
            margin-right: auto;
            border-radius: 10px;
        }

        th, td {
            padding: 10px;
            text-align: center;
            border-bottom: 1px solid #ddd;
            background-color: #0009;
            color: white;
            line-height: 15px;
        }

        th {
            color: #f6843b;
        }

        .btn-danger {
            background-color: black;
            color: #f6843b;
            padding: 15px 15px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            border-radius: 10px;
        }

        .btn-succes {
            background-color: black;
            color: #f6843b;
            padding: 15px 15px;
            text-align: center;
            display: inline-block;
            font-size: 16px;
            border-radius: 10px;
            text-decoration: none;
        }

        .btn-primary {
            background-color: #f6843b;
            border: solid;
            color: black;
            padding: 15px 15px;
            text-align: center;
            display: inline-block;
            font-size: 16px;
            border-radius: 10px;
            width: 30%;
            margin-left: 35%;
            margin-top: 15px;
            text-decoration: none;
        }

        .planeManagementPage {
            margin: 0;
            padding: 2%;
        }



        .planeManager p {
            margin: 0;
            padding: 0;
            font-size: 26px;
            font-weight: bold;
            margin-bottom: 20px;
            color: #fff
        }
    </style>
</html>
}



