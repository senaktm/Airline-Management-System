@{ 
    Layout = null;
}
@using (Html.BeginForm())
{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
    </head>
    <body>
        <div class="loginPage">
            <h1>Login</h1>
            <form>
                <p> username</p>

                @Html.TextBox("username", null, new { @class = "form-control" })

            </form>
            <p>password</p>
            @Html.TextBox("password", null, new { @class = "form-control" })
            <br>
            <button type="submit">Login</button>
            <br>
        </div>
        <div class="login">
        

        </div>
    </body>
    <style>
        body {
           
            background-image: url('../../images/plane4.jpg');
            background-size:100%;
            background-repeat: no-repeat;
        }
        .login p {
            font-size: 50px;
            padding: 60px 30px;
           color:white;
        }

        .loginPage {
            width: 25%;
            height: auto;
            background: #0009;
            color: #fff;
            top: 50%;
            left: 50%;
            position: absolute;
            transform: translate(-50%,-50%);
            padding: 60px 30px;
            border-radius: 10px;
        }

            .loginPage h1 {
                margin: 0;
                padding: 0;
                color: #f6843b;
                text-align: center;
                font-weight: bold;
            }

            .loginPage p {
                margin: 0;
                padding: 0;
                font-size: 26px;
                font-weight: bold;
                margin-bottom: 20px;
                color: #f6843b;
            }

            .loginPage input[type="text"], input[type="password"] {
                width: 100%;
                border: none;
                border-bottom: 1px solid #fff;
                background: transparent;
                outline: none;
                color: white;
                font-size: 16px;
                font-weight: bold;
                margin-bottom: 20px;
            }

            .loginPage button {
                border: none;
                outline: none;
                height: 40px;
                background-color: #f6843b;
                font-size: 18px;
                cursor: pointer;
                width: 100%;
            }
    </style>
</html>

}
