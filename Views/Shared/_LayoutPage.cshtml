<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="topnav">
        <a href="@Url.Action("Plane", "Plane")">PLANE</a>
        <a href="@Url.Action("Company", "Company")">COMPANY</a>
        <a href="@Url.Action("Model", "Model")">Model</a>
        <a href="@Url.Action("Flight", "Flight")">FLIGHT</a>
        <a href="@Url.Action("Arrival", "Arrival")">Arrival</a>
        <a href="@Url.Action("Departure", "Departure")">Departure</a>
    </div>



        <div>
            @RenderBody()
        </div>
</body>
</html>
<style>
    body {
        background-image: url('../../images/plane4.jpg');
        background-size: 100%;
        background-repeat: no-repeat;
        margin: 0;
        padding: 0;
    }
    /* Add a black background color to the top navigation */
    .topnav {
        height: 60px;
        width: 100%;
        background-color: #333;
        overflow: hidden;
    }

        /* Style the links inside the navigation bar */
        .topnav a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            line-height: 60px;
            text-decoration: none;
            padding-right: 32px;
            padding-left: 32px;
            font-size: 20px;
        }

            /* Change the color of links on hover */
            .topnav a:hover {
                background-color: #ddd;
                color: black;
            }

            /* Add a color to the active/current link */
            .topnav a.active {
                background-color: #04AA6D;
                color: orange;
            }

</style>